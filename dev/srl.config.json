  "spacer": {
    "spacer": {
      "tiny": {
        "size": 16
      },
      "small": {
        "size": 24
      },
      "medium": {
        "size": 28,
        "media": {
          "up": {
            "landscape": 32
          }
        }
      },
      "large": {
        "size": 36,
        "media": {
          "up": {
            "landscape": 48
          }
        }
      },
      "extra-large": {
        "size": 50,
        "media": {
          "up": {
            "landscape": 64
          }
        }
      }
    }
  },
  "grid": {
    "containers": {
      "print": {
        "padding": 0
      },
      "phone-pt": {
        "padding": 16
      },
      "phone-ls": {
        "padding": 16
      },
      "tablet-pt": {
        "padding": 16
      },
      "tablet-ls": {
        "padding": 16
      },
      "desktop": {
        "padding": 32,
        "max-width": 1280
      },
      "desktop-large": {
        "padding": 32,
        "max-width": 1280
      }
    },
    "breakpoints": {
      "print": 0,
      "phone-pt": 0,
      "phone-ls": 576,
      "tablet-pt": 768,
      "tablet-ls": 992,
      "desktop": 1200,
      "desktop-large": 1400
    },
    "columns": {
      "print": 12,
      "phone-pt": 4,
      "phone-ls": 4,
      "tablet-pt": 8,
      "tablet-ls": 12,
      "desktop": 12,
      "desktop-large": 12
    },
    "gutter": {
      "print": {
        "column-gap": 16
      },
      "phone-pt": {
        "column-gap": 16
      },
      "phone-ls": {
        "column-gap": 16
      },
      "tablet-pt": {
        "column-gap": 16
      },
      "tablet-ls": {
        "column-gap": 16
      },
      "desktop": {
        "column-gap": 32
      },
      "desktop-large": {
        "column-gap": 32
      }
